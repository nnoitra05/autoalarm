<div class="contents_row">
  <div class="container">
    <h2>新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nickname %> (６文字まで)
        <%= f.text_field :nickname, autofocus: true, maxlength: "6" %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="slack_btn">
        <div>
          <%= link_to "Slack招待リンク", "https://join.slack.com/t/autoalarm/shared_invite/zt-k7gxwsgx-BBH5ZqVij9g3MJeOiAyOFw", target: :_blank, rel: "noopener noreferrer", class: "btn" %>
        </div>

        <%# Slack連携ヘルプへのrender %>
        <%= render partial: "layouts/slack_help" %>
      </div>
      
      <div class="field">
        <%= f.label :slack_id, "AutoAlarmのメンバーID" %>
        <%= f.text_field :slack_id, autofocus: true, autocomplete: "member-id" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上)
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規会員登録" %>
      </div>
    <% end %>
  </div>

   <%= render "devise/shared/links" %>
</div>