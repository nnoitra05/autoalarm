<div class="mypage">

  <div class="mypage_title">
    <h1>マイページ</h1>
  </div>

  <div class="user_name">
    <div>Nickname:   <%= current_user.nickname %></div>
    <div>Email:   <%= current_user.email %></div>
  </div>

  <div class="user_btn">
    <%= link_to "編集する", edit_user_path(current_user.id), class: 'btn'%>
    <%= link_to "削除する", user_path(current_user.id), method: :delete, class: 'btn'%>
  </div>

  <div class="simple-calendar-parent">

    <%= month_calendar do |date| %>

      <%= "#{date.month}月#{date.day}日" %><br>
      
      <%# カレンダーに表示する予定の取得 %>
      <% calendar = Calendar.find_by(date: date, user_id: current_user.id) %>
      <% unless calendar.nil? %>
        <% BookmarkCalendar.where(calendar_id: calendar).each do |schedule| %>
          <%# 下のlink_toをボタンにしてモーダルで経路検索させる仕様にする %>
          <%= link_to "#{schedule.bookmark.name}", register_bookmark_path(schedule.bookmark) %><br>
        <% end %>
      <% end %>

    <% end %>

  </div>

</div>