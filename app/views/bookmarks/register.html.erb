<div class="register_calendar">

  <h1>カレンダーに登録する</h1>

  <%= form_with url: calendars_path, method: :post, class: 'calendar_form', local: true do |f| %>

    <%= f.label :date, "登録する日付を選択する" %>
    <%= f.date_field :date %>
    <%= f.submit '保存する', class: 'form_btn' %>
    <%= f.hidden_field :bookmark_id, value: @bookmark_calendar.bookmark.id %>

  <% end %>

</div>