
<%= render partial: "weather"%>

<%# 運行情報表示 %>
<div class="train_information">

  <h1>運行情報</h1>

  <ul>
    <% @information_list.each do |info| %>
      <li><%= info %></li><br>
    <% end %>
  </ul>

  <%= "現在、首都圏の遅延情報はありません。" if @information_list.empty? %>

</div>

<%# 経路検索フォーム %>
<div class="search-form">

  <h1>経路検索</h1>

  <%= form_with url: search_trains_path, method: :get, local: true do |f| %>

    <div class="field">
      <%= f.label :departure, "出発地" %>
      <%= f.text_field :departure, value: "西国分寺" %>
    </div>

    <div class="field">
      <%= f.label :destination, "目的地" %>
      <%= f.text_field :destination, value: "渋谷" %>
    </div>

    <% dt = DateTime.now %>

    <div class="field">
      <%= f.label :year, "年" %>
      <%= f.text_field :year, value: dt.year %>
    </div>

    <div class="field">
      <%= f.label :month, "月" %>
      <%= f.text_field :month, value: dt.month %>
    </div>

    <div class="field">
      <%= f.label :day, "日" %>
      <%= f.text_field :day, value: dt.day %>
    </div>

    <div class="field">
      <%= f.label :time, "時間" %>
      <%= f.text_field :time, value: "#{dt.hour}:#{dt.min}" %>
    </div>

    <div class="actions">
      <%= f.submit "NAVITIME APIで検索" %>
    </div>

  <% end %>

</div>

