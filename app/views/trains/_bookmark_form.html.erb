

<div class="cp_modal02">
  <input type="checkbox" id="cp_modal" />
  <label for="cp_modal" class="cp_modal_btn">ブックマークに登録する</label>
  <label for="cp_modal" class="cp_modal_bg"></label>
  <div class="cp_modal_cont">
    <label for="cp_modal" class="cp_close"><i class="fa fa-times" aria-hidden="true"></i></label>
    <div class="bookmark_form">
      <h2>ブックマークに登録する</h2>
    </div>

    <article class="cp_content">
      <%= form_with model: @bookmark, method: :post, class: 'form', local: true do |f| %>
        <div class="form-input">
          <%= f.text_field :name, placeholder: "ブックマーク名", class: 'form-message' %>
          <%# ↓----trains/searchメソッドで定義した@bookmark変数をhidden状態でform_with内に設定 %>
          <%= f.hidden_field :departure, value: @bookmark.departure, class: 'form-message' %>
          <%= f.hidden_field :destination, value: @bookmark.destination, class: 'form-message' %>
          <%= f.hidden_field :time, value: @bookmark.time, class: 'form-message' %>
          <%= f.hidden_field :status_check, value: @bookmark.status_check, class: 'form-message' %>
          <%# ↑----ここまで %>
          <%= f.submit '保存する', class: 'form_btn' %>
        </div>
      <% end %>
    </article>
  </div>
</div>