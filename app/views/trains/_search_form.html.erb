<div class="train_search_form">
  <div class="train_route_title">
    <div class="all_title">
      経路検索
    </div>
  </div>

  <%# 検索エラーが発生した際に表示するコメント欄 %>
  <div style="color: red;">
    <%= @failure_comment unless @failure_comment.empty? %>
  </div>

  <%# アイコンヘルプの表示 %>
  <div class="search_result">
  <%= render partial: "trains/search_help" %>
  </div>

  <%= form_with url: search_trains_path, method: :get, local: true, class: "search_form" do |f| %>

    <div class="field search-field">
      <%= f.text_field :departure, placeholder: "出発地" %>
    </div>

    <div class="field search-field">
      <%= f.text_field :destination, placeholder: "目的地" %>
    </div>

    <div class="field search-field">
      <%= f.datetime_field :datetime %>
    </div>

    <div class="field search-field">
      <%# departure_flagはデフォルト値を1（到着時間）に指定してある %>
      <%= f.select :departure_flag, {"到着時刻として検索": 1, "出発時刻として検索": 0}, {selected: 1}, class: "search-select-field" %>
    </div>

    <div class="field search-field">
      <%= f.submit "検索" %>
    </div>

  <% end %>
</div>
